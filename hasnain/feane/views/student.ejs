<form action="/student/form" method="post">

<div class="text-center display-4">Registeration</div>

<div class="form-group col-md-7 ">
    <label>Full name</label>
    <input type="text" class="form-control" name="name">
</div>


<div class="form-group col-md-7 ">
    <label>email</label>
    <input type="text" class="form-control" name="mail">
</div>


<div class="form-group col-md-7 ">
    <label>Contact</label>
    <input type="text" class="form-control" name="contact">
</div>


<div class="form-group col-md-7 ">
    <label>password</label>
    <input type="password" class="form-control" name="password">
</div>

<div class="form-group col-md-7 ">
    <label>fees</label>
    <input type="text" class="form-control" name="fees">
</div>


<div class="form-group col-md-7 ">
    <label>class</label>
     <select class="form-control" name="class">
        <option>select</option>
<% for(var i = 1 ; i<=12 ; i++){ %>
    <option><%= i %></option>
<% } %>

     </select>    

</div>



<div class="form-group col-md-7 ">
    <label>address</label>
    <textarea class="form-control" name="address" name="address"></textarea>
</div>


<div class="form-group col-md-7 ">
    <label>gender</label>
    male <input type="radio" name="gender" value="male">
    female<input type="radio" name="gender" value="female">
</div>

<div class="form-group col-md-7 ">
    <input type="submit" class="btn btn-success" value="submit">
    <input type="clear" class="btn btn-info" value="clear">

</div>
</form>